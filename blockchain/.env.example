# Blockchain Configuration
# Get this from MetaMask: Account Details > Export Private Key
# ⚠️ NEVER share your actual private key!
PRIVATE_KEY=your_metamask_private_key_here

# RPC URLs for different networks
# Sepolia testnet - Get free RPC URL from https://www.alchemy.com/
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY_HERE

# Ethereum mainnet (for production)
MAINNET_RPC_URL=https://eth.llamarpc.com

# Etherscan API key for contract verification (optional)
# Get from https://etherscan.io/myapikey
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Enable gas reporting (true/false)
REPORT_GAS=false
